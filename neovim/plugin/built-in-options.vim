"  === Vim options ===

set nocompatible

set exrc

set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set autoindent smartindent

syntax on
set termguicolors
set colorcolumn=80
set signcolumn=yes
set noerrorbells
set scrolloff=10

set relativenumber
set nu

set nohlsearch
set hidden
set nowrap
set noswapfile
set nobackup
set undodir=~/.nvim/undodir
set undofile
set incsearch
set noshowmode
set updatetime=50
set cmdheight=2
set shortmess+=c
set guicursor=
